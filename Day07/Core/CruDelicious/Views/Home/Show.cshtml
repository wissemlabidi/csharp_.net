@{
    ViewData["Title"] = "Show One Page";
}

@model Dish

<div class="d-flex justify-content-center">
    <h1>@Model.DishName</h1>
</div>
<div class="card-head d-flex justify-content-evenly mb-3">
    <a href="/">Home</a>
    <a href="/Home/Privacy">Add a Dish</a>
</div>
<h4>@Model.DishName by @Model.ChefName</h4>
<div>
    <p>@Model.Description</p>
    <p>Calories : @Model.CaloriesNumber</p>
    <p>Tastiness : @Model.Tastiness</p>
</div>
<div class="card-head d-flex justify-content-evenly mb-3">
    <form asp-action="DeleteDish" asp-controller="Home" method="post">
        <input type="hidden" name="dishId" value="@Model.DishId">
        <input type="submit" value="Delete" class="btn btn-danger">
    </form>
    <a class="btn btn-primary" href="/dishs/@Model.DishId/edit">Edit</a>
</div>